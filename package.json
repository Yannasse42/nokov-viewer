{
  "name": "nokov-viewer",
  "version": "1.1.0",
  "description": "Nokov Viewer - Analyse de marche, cin√©matique, PST",
  "main": "main.js",
  "author": "Yann Villard",
  "license": "ISC",

  "scripts": {
    "start": "electron .",

    "py:clean": "if exist extra\\analyse rmdir /S /Q extra\\analyse & mkdir extra\\analyse",

    "py:build": "npm run py:clean && pyinstaller --onefile --name analyse --paths src --add-data \"src/Gait_Joint_Angle_Normative_Data.csv;.\" src/analyse.py && copy /Y dist\\analyse.exe extra\\analyse\\",

    "dist": "npm run py:build && electron-builder"
  },

  "dependencies": {
    "chart.js": "^4.5.1",
    "chartjs-plugin-zoom": "^2.2.0",
    "material-icons": "^1.13.14"
  },

  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "rcedit": "^4.0.1"
  },

  "build": {
    "appId": "com.nokov.viewer",
    "productName": "Nokov Viewer",

    "files": [
      "!dist/",
      "!build/",
      "!venv/",
      "!.venv/",
      "!*.spec",
      "!**/__pycache__",
      "!**/*.log",
      "!README.md",
      "**/*"
    ],

    "extraResources": [
      {
        "from": "extra/analyse",
        "to": "analyse",
        "filter": ["**/*"]
      }
    ],

    "directories": {
      "buildResources": "build",
      "output": "dist"
    },

    "win": {
      "icon": "src/images/nokov_viewer.ico",
      "target": "nsis",
      "legalTrademarks": "Yann Villard",
      "signAndEditExecutable": true,
      "verifyUpdateCodeSignature": false
    },

    "nsis": {
      "oneClick": true,
      "multiLanguageInstaller": true,
      "installerLanguages": [
        "en_US",
        "fr_FR",
        "de_DE",
        "es_ES",
        "it_IT",
        "zh_CN"
      ],
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nokov Viewer",
      "artifactName": "Nokov-Viewer-Setup-${version}.exe"
    }
  }
}
